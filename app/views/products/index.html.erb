<% content_for :header_image do %>

  <%= image_tag('header-image.jpg', id:'content-header-img', alt: 'Learn Growth Hacking') %>

<% end %>

        <article id="details-article" class="col-sm-8 clear">

					<h1 id="article-title">Products</h1>
					</article>
				
    
<section id="products">
	<% @products.each do |pod| %>

		<% if pod.product_class == 'subscription' %>
	
		<div class="product clearfix">
		 <a href="<%= product_path(pod) %>">
		 <div class="product-image-container">
		 <img src="<%= asset_path pod.thumbnail_image_db_name %>" alt="<%= pod.title %>"/>
		 <span class="product-price"><%= pod.price %></span>
		 </div>
		 <p class="product-title"><%= pod.title %></p></a>
		  </div>

	<% end %>

<% end %>



 </section>
